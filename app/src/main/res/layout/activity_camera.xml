<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity">

    <androidx.appcompat.widget.Toolbar
        android:elevation="10dp"
        android:id="@+id/toobarDetails"
        android:background="@drawable/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera Page"/>




        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/toobarDetails"
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on images to take photos"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@+id/messageTextView"
        android:id="@+id/photoImageView1"
        android:layout_width="200dp"
        android:scaleType="fitXY"
        android:layout_height="200dp"
        android:src="@drawable/addphoto"
        android:background="#CCCCCC"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:layout_below="@+id/messageTextView"
        android:layout_alignParentRight="true"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/photoImageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/addphoto"
        android:background="#CCCCCC"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@+id/photoImageView1"
        android:id="@+id/photoImageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:src="@drawable/addphoto"
        android:background="#CCCCCC"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/sent_button_color"
        android:layout_margin="6dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Photos"
        android:layout_marginTop="20dp"
        android:enabled="false"/>



</RelativeLayout>
