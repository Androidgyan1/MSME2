<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBord">

    <androidx.appcompat.widget.Toolbar
        android:elevation="10dp"
        android:id="@+id/toobarDetails"
        android:background="@drawable/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginLeft="12dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DashBord"/>




        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>




    <androidx.viewpager2.widget.ViewPager2
        android:layout_below="@+id/toobarDetails"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_below="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:layout_width="120dp"
        android:layout_height="120dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:onClick="NavigateToSchemePage"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/scheme"></ImageView>



            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:text="Scheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/resume"></ImageView>



                <TextView
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:text="Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>


            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <TextView
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="MSME Verification App"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>




   </RelativeLayout>